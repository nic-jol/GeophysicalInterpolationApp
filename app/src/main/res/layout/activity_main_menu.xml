<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.violetfire.geophysicalinterpolationapp.MainMenu">

    <TextView
        android:id="@+id/z_units_prompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/measure_units_prompt"
        android:textSize="18sp"

        android:layout_below="@+id/general_prompt"
        android:layout_alignRight="@+id/z_input_units"
        android:layout_alignEnd="@+id/z_input_units"
        android:layout_marginTop="32dp" />

    <TextView
        android:id="@+id/x_units_prompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/x_units_prompt"
        android:textSize="18sp"

        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/y_units_prompt"
        android:layout_alignStart="@+id/y_units_prompt" />

    <TextView
        android:id="@+id/y_units_prompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/y_units_prompt"
        android:textSize="18sp"
        android:layout_marginBottom="10dp"
        android:layout_above="@+id/y_input_units"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/z_input_units"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:layout_above="@+id/x_units_prompt"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="37dp" />

    <EditText
        android:id="@+id/x_input_units"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:layout_marginBottom="30dp"
        android:layout_above="@+id/y_units_prompt"
        android:layout_alignLeft="@+id/y_input_units"
        android:layout_alignStart="@+id/y_input_units" />

    <EditText
        android:id="@+id/y_input_units"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:layout_marginBottom="17dp"
        android:layout_above="@+id/button"
        android:layout_alignLeft="@+id/z_input_units"
        android:layout_alignStart="@+id/z_input_units" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="saveUnits"
        android:text="Save Units"
        android:textSize="18sp"
        android:layout_marginBottom="16dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/general_prompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="18dp"
        android:gravity="center_horizontal"
        android:text="Enter Units for Measured Values:"
        android:textSize="30sp" />


</RelativeLayout>
